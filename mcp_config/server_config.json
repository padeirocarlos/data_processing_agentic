{
    "mcpServers": {
        
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "." ]
        },
        
        "email": {
            "command": "uv",
            "args": ["run", "mcp_server/email_server.py"]
        },

        "filesystemserver": {
            "command": "uv",
            "args": ["run", "mcp_server/filesystem_server.py"]
        },

        "fetch": {
            "command": "uvx",
            "args": ["mcp-server-fetch"]
        }
    }
}
  